<div class="card-columns">

    {{#each articles}}

        <div class="card border-dark">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="https://www.newyorker.com{{url}}">
                        {{heading}}
                    </a>
                </h5>
                <p class="card-text">{{description}}</p>
                <p class="date">{{date}}</p>
                <a href="/articles/{{_id}}">{{comments.length}} Comments</a>
            </div>
            <img src="{{img_url}}" class="card-img-top" alt="article image">
        </div>

    {{else}}
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">No articles to display</h5>
            </div>
        </div>
    {{/each}}
</div>